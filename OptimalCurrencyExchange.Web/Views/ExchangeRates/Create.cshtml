@model OptimalCurrencyExchange.Web.Models.ModelsDB.ExchangeRate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ExchangeRate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankId" class="control-label"></label>
                <select asp-for="BankId" class ="form-control" asp-items="ViewBag.BankId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CurrencySale" class="control-label"></label>
                <select asp-for="CurrencySale" class="form-control"></select>
                <span asp-validation-for="CurrencySale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyBuy" class="control-label"></label>
                <select asp-for="CurrencyBuy" class="form-control"></select>
                <span asp-validation-for="CurrencyBuy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
