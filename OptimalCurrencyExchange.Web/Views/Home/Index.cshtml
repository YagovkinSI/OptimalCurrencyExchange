@model OptimalCurrencyExchange.Web.Models.ViewModels.ExchangeRequest

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="FindOptimalExchange">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrencyFrom" class="control-label"></label>
                    <select asp-for="CurrencyFrom" class="form-control"></select>
                    <span asp-validation-for="CurrencyFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CountFrom" class="control-label"></label>
                    <input asp-for="CountFrom" class="form-control" />
                    <span asp-validation-for="CountFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrencyTo" class="control-label"></label>
                    <select asp-for="CurrencyTo" class="form-control"></select>
                    <span asp-validation-for="CurrencyTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Оптимальный обмен" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
